<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LabelText">
        <item name="android:layout_margin">@dimen/text_view_label_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="valueText">
        <item name="android:layout_marginLeft">@dimen/text_view_value_margin</item>
        <item name="android:layout_marginRight">@dimen/text_view_value_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_view_value_margin</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>
